
<div class="row">
  <div class="col-sm-8">
    <h2 class="page-header app-blue-text-color">Create Article</h2>
  </div>
</div>
<div class='row'>
  <div class="col-xs-8">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class='col-sm-12'>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class='col-sm-12'>
          <%= f.text_area :description, class: 'form-control', placeholder: 'Description for article', rows: 10 %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-sm-12'>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class='row'>
<div class="col-sm-4 col-sm-offset-2">
  [ <%= link_to 'Cancel article and return to articles listing', articles_path %> ]
</div>
</div>
